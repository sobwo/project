<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/listup"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/list" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="10"
            app:srcCompat="@drawable/white" />

        <ImageButton
            android:id="@+id/cart"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:scaleType="fitCenter">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/leftdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/open_leftdoor" />

            <TableLayout
                android:id="@+id/foodview"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:stretchColumns="*"
                android:layout_marginLeft="38dp"
                android:layout_marginBottom="-5dp">
                <TableRow
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/check1"
                        android:layout_height="20dp"
                        android:layout_width="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center"
                        android:padding="0sp"
                        android:scaleType="centerCrop"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t1"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check2"
                        android:layout_height="20dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:padding="0sp"
                        android:scaleType="centerCrop"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t2"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check3"
                        android:layout_height="20dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:padding="0sp"
                        android:scaleType="centerCrop"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t3"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/check4"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t4"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check5"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t5"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check6"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"/>
                    <ImageView
                        android:id="@+id/t6"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/check7"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t7"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check8"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t8"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check9"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t9"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/check10"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t10"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check11"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t11"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/check12"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"/>
                    <ImageView
                        android:id="@+id/t12"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

        </FrameLayout>

        <ImageButton
            android:id="@+id/rightdoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:srcCompat="@drawable/main2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/add" />

    </LinearLayout>


</LinearLayout>